@model projet2.Models.Produit

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Désignation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Désignation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Model.Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="~/img/@Model.Category.ImageUrl" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
        </dd>
    </dl>
</div>
