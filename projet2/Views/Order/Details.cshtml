@model projet2.Models.Order

<h1>Détails de la commande</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Numéro de commande:</dt><br />
        <dd class="col-sm-10">@Model.OrderId</dd>
        <br />
        <dt class="col-sm-2">Date de commande:</dt>
        <br />
        <dd class="col-sm-10">@Model.OrderDate</dd>
        <br />
        <dt class="col-sm-2">Montant total:</dt>
        <br />
        <dd class="col-sm-10">@Model.TotalAmount</dd>
        <br />
        <dt class="col-sm-2">État de livraison:</dt>
        <br />
        <dd class="col-sm-10">@Model.IsDelivered ? "Livré" : "Non livré"</dd>
    </dl>
</div>
